<div style="background-color: rgb(241, 237, 237)">
    <div class="container">
        <br />
        <div style="
        width: 500px;
        background-color: white;
        margin-left: 400px;
        text-align: center;
        padding: 30px 50px;
      ">
            <h4>ĐỔI MẬT KHẨU</h4>

            <hr />
            <form>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Email"
                           ng-model="email"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Mật khẩu cũ"
                           ng-model="matKhauCu"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Mật khẩu mới"
                           ng-model="matKhauMoi"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Nhập lại mật khẩu mới"
                           ng-model="matKhauMoiRe"
                           style="margin-bottom: 30px" />
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary"
                            type="button"
                            style="
              background-color: black;
              border-color: black;
              margin-bottom: 30px;
            "
                            ng-click="doimatkhau()">
                        Đổi mật khẩu
                    </button>
                </div>
            </form>
        </div>
        <br />
    </div>
</div>
