<div style="background-color: rgb(241, 237, 237)">
    <div class="container">
        <br />
        <div style="
        width: 500px;
        background-color: white;
        margin-left: 400px;
        text-align: center;
        padding: 30px 50px;
      ">
            <h4>TẠO TÀI KHOẢN</h4>
            <hr />
            <form method="post">
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Họ"
                           ng-model="ho"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Tên"
                           ng-model="ten"
                           style="margin-bottom: 20px" />
                </div>
                <div style="margin-bottom: 20px; text-align: left" ng-model="gioiTinh">
                    <input type="radio" name="radio" ng-model="gioiTinh" value="Nữ" />
                    Nữ
                    <input type="radio"
                           name="radio"
                           ng-model="gioiTinh"
                           value="Nam"
                           style="margin-left: 20px" />
                    Nam
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="dd/mm/yyyy"
                           ng-model="ngaySinh"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Email"
                           ng-model="email"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Số điện thoại"
                           ng-model="soDienThoai"
                           style="margin-bottom: 20px" />
                </div>
                <div>
                    <input type="text"
                           class="form-control"
                           placeholder="Mật khẩu"
                           ng-model="matKhau"
                           style="margin-bottom: 30px" />
                </div>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary"
                            type="button"
                            style="
              background-color: black;
              border-color: black;
              margin-bottom: 30px;
            "
                            ng-click="them()">
                        Đăng ký
                    </button>
                </div>
            </form>
        </div>
        <br />
    </div>
</div>
