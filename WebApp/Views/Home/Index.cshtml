@{
    ViewData["Title"] = "Home Page";
}

<div style="background-color: #f1eded; padding: 20px 0px">
    <div class="container">
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="0"
                        class="active"
                        aria-current="true"
                        aria-label="Slide 1"></button>
                <button type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                <button type="button"
                        data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/img/banner1.png" class="d-block w-100" alt="..." />
                </div>
                <div class="carousel-item">
                    <img src="/img/banner3.png" class="d-block w-100" alt="..." />
                </div>
                <div class="carousel-item">
                    <img src="/img/banner2.png" class="d-block w-100" alt="..." />
                </div>
            </div>
            <button class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div style="margin-top: 20px">
            <h4 style="margin-left: 20px"><strong>SẢN PHẨM MỚI NHẤT</strong></h4>
            <div class="row">
                <div class="col-3"
                     style="background-color: #f1eded; padding: 10px 30px"
                     ng-repeat="sanPham in listSanPham">
                    <div style="
              background-color: white;
              padding: 5px 5px 0px 5px;
              height: 480px;
            ">
                        <a href="#detail/{{sanPham.id}}">
                            <img src="{{sanPham.img}}" alt="" width="100%" height="350px" />
                        </a>
                        <div style="padding: 10px 5px">
                            <p style="margin-bottom: 5px">{{sanPham.thuongHieu}}</p>
                            <a href="#detail/{{sanPham.id}}"
                               style="color: black; text-decoration: none">
                                <div style="height: 50px">
                                    <p style="margin-bottom: 5px">
                                        <strong>{{sanPham.ten}}</strong>
                                    </p>
                                </div>
                            </a>
                            <p style="margin-bottom: 5px">{{sanPham.gia}}₫</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div>
            <h4 style="margin-left: 20px"><strong>SẢN PHẨM BÁN CHẠY NHẤT</strong></h4>
            <div class="row">
                <div class="col-3"
                     style="background-color: #f1eded; padding: 10px 30px"
                     ng-repeat="sanPham in listSanPham">
                    <div style="
              background-color: white;
              padding: 5px 5px 0px 5px;
              height: 480px;
            ">
                        <a href="#detail/{{sanPham.id}}">
                            <img src="{{sanPham.img}}" alt="" width="100%" height="350px" />
                        </a>
                        <div style="padding: 10px 5px">
                            <p style="margin-bottom: 5px">{{sanPham.thuongHieu}}</p>
                            <a href="#detail/{{sanPham.id}}"
                               style="color: black; text-decoration: none">
                                <div style="height: 50px">
                                    <p style="margin-bottom: 5px">
                                        <strong>{{sanPham.ten}}</strong>
                                    </p>
                                </div>
                            </a>
                            <p style="margin-bottom: 5px">{{sanPham.gia}}₫</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

